= simple_form_for [@coach], remote: true, authenticity_token: true, html: { id: 'CoachForm', multipart: true } do |f|
  #error_holder
    %ul#errors
  = f.error_notification
  .form-group
    = f.input :name, autofocus: true, required: true
  .form-group
    = f.input :first_name, required: true
  .form-group
    = f.input :bio, as: :text, required: true
  .form-group
    = f.input :instagram_link, as: :url
  .form-group
    = f.input :link, label: 'Scheduling Link', as: :url
  .form-group
    = f.input :profile_image, label: 'Profile Image', as: :file
  .form-actions
    .text-center
      = f.button :submit, class: 'btn btn-md btn-success'
