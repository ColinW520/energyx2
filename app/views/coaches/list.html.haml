.row
  .col-sm-12.col-md-10.col-centered
    - @coaches.each do |coach|
      .card.mb-3{id: "coach_#{coach.id}"}
        .card-block
          .row
            .col-sm-12.col-md-4
              %img.img-fluid.rounded{alt: coach.name, src: coach.profile_image.url}
            .col-sm-12.col-md-8
              %h3.my-3= coach.name
              %hr{align: 'left'}
              %p= coach.bio
