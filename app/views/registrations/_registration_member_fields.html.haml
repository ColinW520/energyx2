%tr.nested-fields
  %td
    = f.hidden_field :registration_id
    = f.input :first_name, label: false, required: true, placeholder: 'First', input_html: { style: "font-size: 14px;" }
  %td= f.input :last_name, label: false, required: true, placeholder: 'Last', input_html: { style: "font-size: 14px;" }
  %td= f.input :email, as: :email, label: false, required: true, placeholder: 'email', input_html: { style: "font-size: 14px;" }
  %td= f.input :phone, as: :tel, label: false, required: true, placeholder: 'phone', input_html: { style: "font-size: 14px;" }
  %td= f.input :shirt_size, as: :select, collection: ['x-small', 'small', 'medium', 'large', 'xl', 'xxl'], include_blank: false, label: false
