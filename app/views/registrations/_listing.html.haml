.row
  .col-sm-12
    .card.card-outline-primary.table-card
      .table-responsive
        %table.table
          %thead.thead-inverse
            %th= smart_listing.sortable 'Name', :name
            %th= smart_listing.sortable 'Email', :email
            %th= smart_listing.sortable 'Phone', :phone
            %th= smart_listing.sortable 'Created', :created_at
            %th= smart_listing.sortable 'Shirt Size', :primary_shirt_size
            - if @event.waves.any?
              %th= smart_listing.sortable 'Wave', :event_stage_id
            %th Team
            - unless @event.is_free?
              %th Charge ID
            %th
          %tbody#registrations
            - smart_listing.collection.each do |registration|
              = render registration
        %br
%br
.row
  .col-sm-12
    .pull-right
      = smart_listing.paginate
      = smart_listing.pagination_per_page_links
