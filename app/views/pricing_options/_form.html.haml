= simple_form_for [@pricing_option], remote: true, authenticity_token: true, html: { id: 'PricingOptionForm' } do |f|
  #error_holder
    %ul#errors
  = f.error_notification
  .form-group
    = f.input :name, label: 'Name', autofocus: true, required: true
  .form-group
    = f.input :description, as: :text, label: 'Description'
  .form-group
    = f.input :amount_in_cents, as: :integer, label: 'Price in Cents', hint: "$10 = 1000", required: true
  .form-group
    = f.input :subtype, as: :select, collection: ['pass', 'plan'], include_blank: false, hint: 'This controls what column this option shows up in.'
  .form-group
    = f.input :purchase_link
  .form-actions
    .text-center
      = f.button :submit, class: 'btn btn-md btn-success'
