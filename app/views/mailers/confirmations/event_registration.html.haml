%table.body-wrap
  %tr
    %td
    %td.container{:width => "600"}
      .content
        %table.main{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
          %tr
            %td.content-wrap
              %table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
                %tr
                  %td.content-block{:style => "text-align:center;"}
                    %h2="Registration confirmation for #{@event.name}"
                    %p.lead= "Hi! You have successfully been registered for #{@event.name}."
                %tr{:style => "text-align:center"}
                  %td.content-block
                    %strong Name
                    %br
                    %em= @registration.name
                %tr{:style => "text-align:center"}
                  %td.content-block
                    %strong Contact Number
                    %br
                    %em= @registration.phone
                %tr{:style => "text-align:center;"}
                  %br
                  %td.content-block
                    %a.btn.btn-primary{:href => "https://energyxfitness.com/events/#{@event.slug}/registrations/#{@registration.id}?email_check=#{@registration.email}"}
                      Details
                %tr
                  %td.content-block{:style => "text-align:center;"}
                    %h2 Have Fun!
        .footer
          %table{:width => "100%"}
            %tr
              %td.aligncenter.content-block
                %span.text-muted This email was generated by EnergyX Fitness
