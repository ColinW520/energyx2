%table.body-wrap
  %tr
    %td
    %td.container{:width => "600"}
      .content
        %table.main{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
          %tr
            %td.content-wrap
              %table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
                %tr
                  %td.content-block{:style => "text-align:center;"}
                    %h2="Registration confirmation for #{@event.name}"
                    %p.lead= "Hi! You have successfully registered a Team for #{@event.name}."
                %tr{:style => "text-align:center"}
                  %td.content-block
                    %strong Name
                    %br
                    %em= @team.name
                %tr{:style => "text-align:center"}
                  %td.content-block
                    %strong Division
                    %br
                    %em= @team.division
                %tr
                  %td.content-block{:style => "text-align:center;"}
                    %h2= "We charged your #{@card.brand} card ending in #{@card.last4} the registration fee of #{number_to_currency(@charge.amount / 100.to_f)}. Thank you for your business!"
        .footer
          %table{:width => "100%"}
            %tr
              %td.aligncenter.content-block
                %span.text-muted This email was generated by EnergyX Fitness
