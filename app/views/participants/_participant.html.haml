%tr.item{id: "participant_#{participant.id}", "data-item-id"=> "#{participant.id}"}
  %td= participant.friendly_name
  %td= number_to_phone participant.mobile_phone.phony_formatted(normalize: :US, format: :international, spaces: ' ')
  %td= local_time participant.updated_at, format: "%m/%d/%Y"
  %td= participant.submissions.count
  %td.actions
    .btn-group.pull-right
      = link_to participant_path(participant), class: 'btn btn-sm btn-info' do
        %i.fa.fa-eye
        Profile
      = link_to edit_participant_path(participant), remote: true, class: 'btn btn-sm btn-warning' do
        %i.fa.fa-edit
        Edit
      = link_to participant_path(participant), remote: true, method: :delete, class: 'btn btn-sm btn-danger' do
        %i.fa.fa-trash
        Destroy
