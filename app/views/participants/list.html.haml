.row
  .col-sm-12.col-md-6.col-centered
    .row
      .col-sm-12.col-md-6
        .card
          %table.table.table-hover
            %thead.bg-info{style: "color: #fff"}
              %th{colspan: 3} ALL TIME
            %tbody
              - @participants.each_with_index do |participant, index|
                %tr
                  %td= index + 1
                  %td= participant.name
                  %td= number_with_delimiter participant.total_meters

      .col-sm-12.col-md-6
        .card
          %table.table.table-hover
            %thead.bg-info{style: "color: #fff"}
              %th{colspan: 3} THIS WEEK
            %tbody
              - @participants.each_with_index do |participant, index|
                %tr
                  %td= index + 1
                  %td= participant.name
                  %td= number_with_delimiter participant.meters_from(Time.now.beginning_of_week, Time.now)
