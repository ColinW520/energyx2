.row
  .col-sm-12
    .card.card-outline-primary.table-card
      .table-responsive
        %table.table
          %thead.thead-inverse
            %th= smart_listing.sortable 'Name', :name
            %th= smart_listing.sortable 'Phone', :mobile_phone
            %th= smart_listing.sortable 'Joined', :created_at
            %th Submissions
            %th
          %tbody#submissions
            - smart_listing.collection.each do |participant|
              = render participant
        %br
%br
.row
  .col-sm-12
    .pull-right
      = smart_listing.paginate
      = smart_listing.pagination_per_page_links
