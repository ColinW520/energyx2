.row
  .col-sm-12
    .card.card-outline-primary.table-card
      .table-responsive
        %table.table.table-hover#sortable
          %thead.thead-inverse
            %th= smart_listing.sortable 'Name', :name
            %th Registerable
            %th= smart_listing.sortable 'Starts', :starts_at
            %th= smart_listing.sortable 'Updated', :updated_at
            %th
          %tbody#events
            - smart_listing.collection.each do |event|
              = render event
        %br
%br
.row
  .col-sm-12
    .pull-right
      = smart_listing.paginate
      = smart_listing.pagination_per_page_links
