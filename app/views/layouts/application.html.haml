!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: "stylesheet", integrity: "sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin: "anonymous"}
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag "//www.google.com/jsapi", "chartkick"
    = javascript_include_tag "//fastcdn.org/Readmore.js/2.1.0/readmore.min.js"
    %title
      = full_title('EnergyX', yield(:title))
  %body{id: "#{controller_name}_#{action_name}", class: "energyx-body #{controller_name}", style: "background-color: #F3F3F3;"}
    = include_gon(:init => true)
    = render 'shared/sidebar'
    #main.container
      .unobtrusive-flash-container{style: 'z-index:9999999;'}
      = yield
