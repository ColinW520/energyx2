= simple_form_for [@studio_session_type], remote: true, authenticity_token: true, html: { id: 'StudioSessionTypeForm' } do |f|
  #error_holder
    %ul#errors
  = f.error_notification
  .form-group
    = f.input :name, label: 'Class name', autofocus: true, input_html: { maxlength: 140 }, required: true
  .form-group
    = f.input :description, as: :text, label: 'Class Description', required: true
  .form-group
    = f.input :promo_video_url, as: :url, label: 'Vimeo Link'
  .form-actions
    .text-center
      = f.button :submit, class: 'btn btn-md btn-success'
